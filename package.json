{
  "name": "json-tool",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "main": "electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@uiw/react-textarea-code-editor": "^1.4.14",
    "codemirror": "^5.63.1",
    "format-to-json": "^2.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.3",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "@craco/craco": "^6.3.0",
    "@testing-library/webdriverio": "^3.0.4",
    "@types/node": "^16.10.5",
    "@types/webdriverio": "^4.13.3",
    "autoprefixer": "^9.8.7",
    "concurrently": "^6.2.1",
    "cypress": "^8.6.0",
    "electron": "^13.2.3",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "husky": "^7.0.2",
    "postcss": "^7.0.38",
    "spectron": "^15.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.14",
    "wait-on": "^6.0.0"
  },
  "postinstall": "electron-builder install-app-deps",
  "scripts": {
    "start": "BROWSER=none craco start",
    "build": "craco build",
    "test": "craco test src/",
    "test:all": "CYPRESS_BASE_URL=http://localhost:3000 cypress run && craco test src/",
    "eject": "craco eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "setup": "npm run build && cp package.json ./build",
    "package": "npm run setup && electron-builder -l -p never",
    "electron": "npm run setup && wait-on tcp:3000 && electron build/",
    "lint": "eslint ./src/**/*.{ts,tsx}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "semi": [2, "always"]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "org.marabesi.json-utility-tool"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(.*)"
    ]
  },
  "rusky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test:all"
    }
  }
}
