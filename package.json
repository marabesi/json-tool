{
  "name": "json-tool",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "main": "electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.27",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@uiw/react-textarea-code-editor": "^1.4.14",
    "codemirror": "^5.63.1",
    "format-to-json": "^2.1.2",
    "react": "^17.0.2",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-simple-code-editor": "^0.11.0",
    "typescript": "^4.4.3",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "@craco/craco": "^6.3.0",
    "@testing-library/webdriverio": "^3.0.4",
    "@types/webdriverio": "^4.13.3",
    "autoprefixer": "^9.8.7",
    "concurrently": "^6.2.1",
    "electron": "^13.2.3",
    "electron-builder": "^22.13.1",
    "postcss": "^7.0.38",
    "spectron": "^15.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.14",
    "wait-on": "^6.0.0"
  },
  "postinstall": "electron-builder install-app-deps",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "craco eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "setup": "npm run build && cp package.json ./build",
    "package": "npm run setup && electron-builder -l -p never",
    "electron": "npm run setup && wait-on tcp:3000 && electron build/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "org.marabesi.json-utility-tool"
  }
}
